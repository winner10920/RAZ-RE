{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMSIS Erase",
            "type": "shell",
            "command": [
                "echo Connect > .cmd.jlink &&",
                "echo Erase >> .cmd.jlink &&",
                "echo Exit >> .cmd.jlink &&",
                "JLinkExe -device N32G031K8 -if swd -speed 4000 -commandfile .cmd.jlink"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Firmware/keil-mdk/MDK-ARM",
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load",
            "type": "shell",
            "command": [
                "echo Connect > .cmd.jlink &&",
                "echo LoadFile \"out/ReFlasher/RAZ/ReFlasher.axf\" >> .cmd.jlink &&",
                "echo Exit >> .cmd.jlink &&",
                "JLinkExe -device N32G031K8 -if swd -speed 4000 -commandfile .cmd.jlink"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Firmware/keil-mdk/MDK-ARM",
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "problemMatcher": []
        },
        {
            "label": "CMSIS Run",
            "type": "shell",
            "command": "JLinkGDBServerCL",
            "options": {
                "cwd": "${workspaceFolder}/Firmware/keil-mdk/MDK-ARM",
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "args": [
                "-device",
                "N32G031K8",
                "-endian",
                "little",
                "-if",
                "swd-speed",
                "4000",
                "-nohalt",
                "-noir",
                "-nogui",
                "-localhostonly",
                "-port",
                "3333"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load+Run",
            "dependsOn": [
                "CMSIS Load",
                "CMSIS Run"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}